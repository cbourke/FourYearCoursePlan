<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
		http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

    <persistence-unit name="cbourke_database">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!-- Enumeration of classes is possible, but not necessary in a managed environment or with certain implementations -->
        <!-- Seems that the Eclipse setup is requiring explicit listings when executed locally -->
        <class>unl.cse.entities.User</class>
        <class>unl.cse.entities.UserPlan</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://cse.unl.edu/cbourke"/>
            <property name="hibernate.connection.username" value="cbourke"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.connection.pool_size" value="10"/>
           </properties>
    </persistence-unit>

</persistence>